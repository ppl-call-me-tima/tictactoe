<%- contentFor("body") %>

<div id="main-box">

    <div id="choice-popup" class="popup">
        <h2 class="mt-4">PLAY AS</h2>
        <div id="popup-row">
            <button id="choice-X" class="popup-choice">X</button>
            <button id="choice-O" class="popup-choice">O</button>
        </div>
    </div>

    <div id="restart-popup" class="popup restart">
        <button id="restart">RESTART</button>
    </div>

    <h1 id="status-bar"><br></h1>

    <div id="box">
       
        <div class="row g-0">
            <div class="col"><button id="c00"></button></div>
            <div class="col"><button id="c01"></button></div>
            <div class="col"><button id="c02"></button></div>
        </div>
        <div class="row g-0">
            <div class="col"><button id="c10"></button></div>
            <div class="col"><button id="c11"></button></div>
            <div class="col"><button id="c12"></button></div>
        </div>
        <div class="row g-0">
            <div class="col"><button id="c20"></button></div>
            <div class="col"><button id="c21"></button></div>
            <div class="col"><button id="c22"></button></div>
        </div>

    </div>
</div>

<script type="module" src="javascript/script.js"></script>